<div class="col-8 mx-auto">
  <table class="my-5 table table-striped table-bordered">
    <thead>
    <tr class="table-active">
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
      <tr id="food_<%= food.id %>">
        <td><%= food.name %></td>
        <td id='quantity'><%= food.quantity %> <%= food.measurement_unit %></td>
        <td>$<%= food.price * food.quantity %></td>
        <td><%= link_to "Add ingredient", add_ingredient_path(@recipe_id), id: 'add-ingredient' %></td>
      </tr>
    <% end %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token, id: 'csrf-token' %>
    </tbody>
  </table>
</div>
<%= javascript_include_tag 'addIngredient' %>