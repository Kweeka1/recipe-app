<%= stylesheet_link_tag 'public_recipes_style' %>
<section class="vh-100 sign-up">
  <div class="container-fluid h-custom z-3">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-4 shadow-lg py-4 px-5 rounded-2 form-container">
        <h2 class="mb-4 text-center">Sign Up Page</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-outline mb-4">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", class: "btn btn-primary btn-lg mt-3 mb-3", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <p class="notice m-0"><%= notice %></p>
        <p class="alert m-0"><%= alert %></p>
      </div>
    </div>
  </div>
</section>
